{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "vite.config.js",
    "esbuild.js"
  ],
  "rules": {
    "curly": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-unsafe-optional-chaining": "off",
    "no-console": "warn",
    "no-eq-null": "warn",
    "no-case-declarations": "off"
  }
}
